<div class="container">
  <p id="notice"><%= notice %></p>
  <h1>Items</h1>

  <div class="row">
    <div class="col-sm-12">
      <form action="/items">
        <input type="text" name="brand_name" placeholder="Brand.name" value="<%= @search_brand_name %>" />
        <input type="text" name="item_title" placeholder="Title" value="<%= @search_item_title %>" />
        <input type="number" name="item_active" placeholder="Active[-1, 0, 1]" value="<%= @search_item_active %>"/>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
  <table class="table table-bordered">
    <thead class="thead-default">
      <tr>
        <th>#</th>
        <th>Asin</th>
        <th>Title</th>
        <th>Brand</th>
        <th>Main image</th>
        <th>Active</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= item.asin %></td>
          <td><%= link_to item.title.truncate(50), item.amazon_url %></td>
          <td><%= item.brand.name %></td>
          <td>
            <% begin %>
              <%= image_tag item.wrapped_image, :height => 100 %>
            <% rescue => ex %>
              <%= image_tag default_image, :height => 100 %>
            <% end %>
          </td>
          <td><%= item.active %></td>
          <td><%= link_to 'Show', item, class: "btn btn-primary" %></td>
          <td><%= link_to 'Edit', edit_item_path(item), class: "btn btn-primary" %></td>
          <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <!-- Pagination -->
  <ul class="pagination justify-content-center">
    <%= paginate @items %>
  </ul>

  <br>

  <%= link_to 'New Item', new_item_path, class: "btn btn-success" %>
</div>
