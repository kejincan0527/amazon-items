<div class="container">
<h1>Items</h1>

<table class="table table-bordered">
  <thead class="thead-default">
    <tr>
      <th>#</th>
      <th>Asin</th>
      <th>Title</th>
      <th>Brand</th>
      <th>Main image</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= item.asin %></td>
        <td><%= link_to item.title.truncate(50), item.amazon_url %></td>
        <td><%= item.brand.name %></td>
        <td><%= image_tag item.main_image, :height => 100 %></td>
        <td><%= item.active %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

  <!-- Pagination -->
  <ul class="pagination justify-content-center">
    <%= paginate @items %>
  </ul>

<br>

<%= link_to 'New Item', new_item_path %>
</div>
