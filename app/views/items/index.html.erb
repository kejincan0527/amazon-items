<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Asin</th>
      <th>Image</th>
      <th>Title</th>
      <th>Price</th>
      <th>Brand</th>
      <th>Group</th>
      <th>Stocks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.asin %></td>
        <td><img src="<%= item.main_image %>"/></td>
        <td><a href="<%= item.amazon_url %>"><%= item.title %></a></td>
        <td><%= item.price %></td>
        <td><%= item.brand %></td>
        <td><%= item.group %></td>
        <td><%= item.stocks %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

