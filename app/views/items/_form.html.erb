<%= form_with(model: item, local: true) do |form| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
        <% item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :asin, class: "col-2 col-form-label" %>
    <div class="col-10">
      <%= form.text_field :asin, id: :item_asin, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :title, class: "col-2 col-form-label" %>
    <div class="col-10">
      <%= form.text_area :title, id: :item_title, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :description, class: "col-2 col-form-label" %>
    <div class="col-10">
      <%= form.text_area :description, id: :item_description, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :price, class: "col-2 col-form-label" %>
    <div class="col-10">
      <%= form.number_field :price, id: :item_price, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :amazon_url, class: "col-2 col-form-label" %>
    <div class="col-10">
      <%= form.text_area :amazon_url, id: :item_amazon_url, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :brand_id, class: "col-2 col-form-label" %>
    <div class="col-10">
      <%= form.select :brand_id, Brand.all.map { |b| [b.name, b.id] }, {}, {id: "item_brand_id", class: "form-control"} %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :group, class: "col-2 col-form-label" %>
    <div class="col-10">
      <%= form.text_field :group, id: :item_group, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :main_image, class: "col-2 col-form-label" %>
    <div class="col-10">
      <%= form.text_area :main_image, id: :item_main_image, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :stocks, class: "col-2 col-form-label" %>
    <div class="col-10">
      <%= form.number_field :stocks, id: :item_stocks, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :active, class: "col-2 col-form-label" %>
    <div class="col-10">
      <%= form.number_field :active, id: :item_active, class: "form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit :class => "btn btn-lg btn-secondary btn-block" %>
  </div>
<% end %>
