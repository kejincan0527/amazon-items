
<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Brands</h1>

  <table class="table table-bordered">
    <thead class="thead-default">
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @brands.each do |brand| %>
        <tr>
          <td><%= brand.name %></td>
          <td><%= link_to 'Show', brand, class: "btn btn-primary" %></td>
          <td><%= link_to 'Edit', edit_brand_path(brand), class: "btn btn-primary" %></td>
          <td><%= link_to 'Destroy', brand, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Brand', new_brand_path, class: "btn btn-success" %>
</div>
